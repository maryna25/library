<p id="notice"><%= notice %></p>


<table class="table">
  <tr>
    <td><h1>Author</h1></td>
    <td><%= link_to 'New Author', new_author_path, class: 'btn btn-info float-right' %></td>
  </tr>
</table>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Country of birth</th>
      <th>Country of death</th>
      <th>Year of birth</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.surname %></td>
        <td><%= author.country_of_birth %></td>
        <td><%= author.country_of_death %></td>
        <td><%= author.year_of_birth %></td>
        <td><%= author.gender %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
