<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :order_date %>
    <%= form.datetime_select :order_date, id: :order_order_date %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :librarian %>
    <%= form.collection_select :librarian_id, Librarian.all, :id, :surname, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :user %>
    <%= form.collection_select :user_id, User.all, :id, :surname, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :book %>
    <%= form.collection_select :book_ids, Book.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :magazine %>
    <%= form.collection_select :magazine_ids, Magazine.all, :id, :name, prompt: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
